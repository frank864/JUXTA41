<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.SettingsActivity"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E91E63">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               >



               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/close_settings_btn"
                   android:text="Close"
                   android:textColor="@color/white"
                   android:textSize="20sp"
                   android:textStyle="bold"
                   android:layout_alignParentStart="true"/>


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Update"
                   android:layout_marginRight="10dp"
                   android:id="@+id/update_account_setting_btn"
                   android:textColor="@color/white"
                   android:textSize="20sp"
                   android:textStyle="bold"
                   android:layout_alignParentEnd="true"/>
           </RelativeLayout>



        </com.google.android.material.appbar.MaterialToolbar>




    </com.google.android.material.appbar.AppBarLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:id="@+id/settings_profile_image"
        android:src="@drawable/profile"
        android:layout_below="@+id/app_bar_settings"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Profile"
        android:layout_marginRight="10dp"
        android:id="@+id/profile_image_change_btn"
        android:textColor="#030404"
        android:textSize="20sp"
        android:layout_below="@+id/settings_profile_image"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_phone_number"
        android:layout_below="@+id/profile_image_change_btn"
        android:hint="Phone Number"
        android:padding="10dp"
        android:layout_margin="15dp"/>

    <EditText
        android:id="@+id/settings_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_phone_number"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Full Name..." />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_address"
        android:layout_below="@+id/settings_full_name"
        android:hint="Address"
        android:padding="10dp"
        android:layout_margin="15dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/security_question_Btn"
        android:layout_below="@+id/settings_address"
        android:textColor="@color/white"
        android:text="Set Security Questions"
        android:padding="10dp"
        android:layout_margin="15dp"/>






</RelativeLayout>