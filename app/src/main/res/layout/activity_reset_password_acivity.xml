<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ResetPasswordAcivity">
<RelativeLayout
    android:id="@+id/relative123"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/design_default_color_primary"
    android:layout_alignParentTop="true">

    <TextView
        android:id="@+id/page_title"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>


    <EditText
        android:layout_below="@+id/relative123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="Please write your phone number"
        android:id="@+id/find_phone_number"/>


    <TextView
        android:id="@+id/title_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following security  questions"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_below="@+id/find_phone_number"
        android:layout_marginTop="15dp"/>
    <EditText

        android:layout_below="@+id/title_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="Where did you meet your first girlfriend??"
        android:id="@+id/question_1"/>

    <EditText
        android:layout_below="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="What was the name of your first girlfriend??"
        android:id="@+id/question_2"/>


    <Button
        android:layout_below="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:padding="14dp"
        android:text="Verify"
        android:textSize="20sp"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/verify_btn"/>


</RelativeLayout>